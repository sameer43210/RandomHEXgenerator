<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#088FC9"
    android:startColor="#E8E8E8"
    android:endColor="#000000">
    <item>
<shape android:shape="rectangle" >
    <corners
        android:radius="32dp"
        />
    <gradient
        android:angle="45"
        android:centerX="35%"
        android:centerColor="#2F43A8"
        android:startColor="#28EB42"
        android:endColor="#DB0F00"
        android:type="linear"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />
    <size
        android:width="250dp"
        android:height="60dp"
        />
    <stroke
        android:width="3dp"
        android:color="#878787"
        />
</shape>
    </item>
</ripple>